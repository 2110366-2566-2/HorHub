generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  email       String    @unique
  password    String
  
  // role        Role
  // firstName   String
  // lastName    String
  // displayName String
  // gender      Gender
  // birthdate   DateTime
  // phoneNumber String
  isVerified  Boolean   @default(false)
  imageURL    String    @default("https://utfs.io/f/4a65c7f9-7bb1-4498-99bb-4148be482108-t9vzc5.png")
}

enum Gender {
  Male
  Female
  Other
}

enum Role {
  Customer
  Provider
}